<h1>Make a Reservation</h1>

<%= form_for @reservation, url: new_restaurant_reservation_path do |f| %>
  <div class="field">
    <p><%= f.label :time %></p>
    <p><%= f.number_field :time %></p>
  </div>

  <div class="field">
    <p><%= f.label :size %></p>
    <p><%= f.number_field :size %></p>
  </div>

  <div class="field">
    <p><%= f.submit  %></p>
  </div>
<% end %>
